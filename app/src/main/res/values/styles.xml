<resources>

    <!-- Base application theme. -->
    <style name="DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light">
        <!--<item name="android:windowActionBar">false</item>-->
        <!--<item name="android:actionBarStyle">@style/DarkActionBar</item>-->

    </style>


    <!-- Base application theme. -->
    <style name="myAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- This is the styling for action bar -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ff10ff</item>
    </style>



</resources>
